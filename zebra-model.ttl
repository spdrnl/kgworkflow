# Classes and objects
:Man
    a         owl:Class ;
    owl:oneOf ( :english :japanese :norwegian :spaniard :ukranian ) .

:english
    a owl:NamedIndividual, :Man .

:japanese
    a owl:NamedIndividual, :Man .

:norwegian
    a owl:NamedIndividual, :Man .

:spaniard
    a owl:NamedIndividual, :Man .

:ukranian
    a owl:NamedIndividual, :Man .

[]
    a                   owl:AllDifferent ;
    owl:distinctMembers ( :english :japanese :norwegian :spaniard :ukranian ) .

