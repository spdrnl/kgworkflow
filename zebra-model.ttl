# 11.
:chesterfields
    :smoked_by [ a         :Man ;
                 :lives_in _:house_next_to_house_with_fox ] .

_:house_left_to_house_with_fox
    a        :House ;
    :left_of [ a         :House ;
               :owned_by [ a     :Man ;
                           :owns :fox ] ] .

_:house_right_to_house_with_fox
    a         :House ;
    :right_of [ a         :House ;
                :owned_by [ a     :Man ;
                            :owns :fox ] ] .

_:house_next_to_house_with_fox
    a                   owl:Class ;
    owl:equivalentClass [ a           owl:Class ;
                          owl:unionOf ( _:house_left_to_house_with_fox _:house_right_to_house_with_fox ) ] .


