    :left_of [ a          :House ;
               :has_color :blue ] .

_:house_right_to_blue_house
    a         :House ;
    :right_of [ a          :House ;
                :has_color :blue ] .

_:house_next_to_blue_house
    a                   owl:Class ;
    owl:equivalentClass [ a           owl:Class ;
                          owl:unionOf ( _:house_left_to_blue_house _:house_right_to_blue_house ) ] .